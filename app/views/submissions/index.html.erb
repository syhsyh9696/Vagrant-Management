<ul class="breadcrumb">
  <li><%= link_to "Home", root_path %></li>
  <li class="active">Submission</li>
</ul>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>#</th>
      <th>ID</th>
      <th>Status</th>
      <th>User</th>
    </tr>
  </thead>
  <tbody>
    <tbody>
      <% @submissions.each do |submission| %>
        <tr>
          <td>#</td>
          <td><%= link_to(submission.id, submission_path(submission)) %></td>
          <td><%= submission.status.to_s.upcase %></td>
          <td><%= link_to(submission.user.author_name, user_path(submission.user)) %></td>
        </tr>
      <% end %>
    </tbody>
</table>
